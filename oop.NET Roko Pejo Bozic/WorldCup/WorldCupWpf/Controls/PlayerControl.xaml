<UserControl x:Class="WorldCupWpfApp.Controls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="80">
    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5" Padding="5" Background="White" Margin="0,0,-10,-5">
        <StackPanel HorizontalAlignment="Center">
            <Image x:Name="PlayerImage" Height="50" Width="50" Stretch="UniformToFill" Margin="0,0,0,5"/>
            <TextBlock x:Name="PlayerName" FontWeight="Bold" FontSize="10" TextAlignment="Center"/>
            <TextBlock x:Name="ShirtNumber" FontSize="10" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>


